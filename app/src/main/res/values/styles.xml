<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headingText" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?attr/textcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="usernameText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/textcolor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="caption" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/textcolor</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="popupMenu" parent="Base.Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/card_view</item>
        <item name="android:textColor">?attr/textcolor</item>
        <item name="android:textColorPrimary">?attr/textcolor</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/caption</item>
    </style>

    <style name="customCard" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="inputField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:padding">0dp</item>
        <item name="android:textColorHint">?attr/hintcolor</item>
        <item name="boxCornerRadiusTopEnd">26dp</item>
        <item name="boxCornerRadiusBottomStart">26dp</item>
        <item name="boxCornerRadiusBottomEnd">26dp</item>
        <item name="boxCornerRadiusTopStart">26dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/hintText</item>
        <item name="boxStrokeErrorColor">?errorcolor</item>
        <item name="errorTextColor">?errorcolor</item>
        <item name="errorTextAppearance">@style/errorText</item>
        <item name="errorIconTint">?errorcolor</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="boxStrokeColor">?attr/hintcolor</item>
        <item name="startIconTint">?attr/hintcolor</item>
        <item name="hintTextColor">?attr/hintcolor</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="errorText" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">?attr/errorcolor</item> <!--apply the color you wat here -->
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="paddingStart">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="hintText" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">?attr/errorcolor</item> <!--apply the color you wat here -->
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="paddingStart">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="materialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/cardcolor</item>
        <item name="android:textColor">?attr/buttontextcolor</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">3dp</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>