<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DarkShot.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="backgroundcolor">@color/colorPrimary</item>
        <item name="textcolor">@color/colorOnPrimary</item>
        <item name="cardcolor">@color/colorPrimaryLight</item>
        <item name="tintcolor">@color/colorOnPrimary</item>
        <item name="hintcolor">@color/colorPrimaryDark</item>
        <item name="buttoncolor">@color/colorOnPrimary</item>
        <item name="buttontextcolor">@color/colorPrimary</item>
        <item name="headingcolor">@color/colorOnPrimary</item>
        <item name="huecolor">@color/colorPrimaryLight</item>
    </style>

    <style name="Theme.DarkShot.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorPrimaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnPrimary">@color/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="backgroundcolor">@color/colorSecondary</item>
        <item name="textcolor">@color/colorOnSecondary</item>
        <item name="cardcolor">@color/colorSecondaryLight</item>
        <item name="tintcolor">@color/colorOnSecondary</item>
        <item name="hintcolor">@color/colorSecondaryDark</item>
        <item name="buttoncolor">@color/colorOnSecondary</item>
        <item name="buttontextcolor">@color/colorSecondary</item>
        <item name="headingcolor">@color/colorOnSecondary</item>
        <item name="huecolor">@color/colorSecondaryLight</item>
    </style>

    <style name="headingText" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?attr/textcolor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

</resources>